#!/usr/bin/with-contenv bash
# shellcheck shell=bash disable=SC2034

# Global
TZ=${TZ:-UTC}

# Cron
CRON_DATA_DIR=${CRON_DATA_DIR:-/config/cron}
CRON_LOG_DIR=${CRON_LOG_DIR:-${CRON_DATA_DIR}/logs}

# Mongo
MONGO_HOME=${MONGO_HOME:-${HOME}/mongo}
MONGO_DB_DIR=${MONGO_DB_DIR:-${MONGO_HOME}/db}
MONGO_CFGDB_DIR=${MONGO_CFGDB_DIR:-${MONGO_HOME}/configdb}
MONGO_ARCHIVE_DIR=${MONGO_ARCHIVE_DIR:-${MONGO_HOME}/archive}
MONGO_CONFIG=${MONGO_CONFIG:-${MONGO_HOME}/mongod.conf}

# Mongo systemLog
MONGO_LOG_DIR=${MONGO_LOG_DIR:-${MONGO_HOME}/logs}
MONGO_SYSTEMLOG_VERBOSITY=${MONGO_SYSTEMLOG_VERBOSITY:-0}
MONGO_SYSTEMLOG_PATH=${MONGO_SYSTEMLOG_PATH:-${MONGO_LOG_DIR}/mongod.log}
MONGO_SYSTEMLOG_LOGAPPEND=${MONGO_SYSTEMLOG_LOGAPPEND:-0}
MONGO_SYSTEMLOG_LOGROTATE=${MONGO_SYSTEMLOG_LOGROTATE:-rename}
MONGO_SYSTEMLOG_DESTINATION=${MONGO_SYSTEMLOG_DESTINATION:-file}
MONGO_SYSTEMLOG_TIMESTAMP_FORMAT=${MONGO_SYSTEMLOG_TIMESTAMP_FORMAT:-iso8601-local}

# Mongo net
MONGO_PORT=${MONGO_PORT:-27017}
MONGO_MAINTENANCE=${MONGO_MAINTENANCE:-0}
MONGO_MAINTENANCE_PORT=${MONGO_MAINTENANCE_PORT:-27777}
MONGO_MAX_INCOMING_CONNS=${MONGO_MAX_INCOMING_CONNS:-65536}
MONGO_COMPRESSORS=${MONGO_COMPRESSORS:-"snappy,zlib,zstd"}
MONGO_SOCKET_ENABLED=${MONGO_SOCKET_ENABLED:-1}
MONGO_SOCKET_DIR=${MONGO_SOCKET_DIR:-/var/run/mongod}

# Security
MONGO_SECURITY_AUTH_DATABASE=${MONGO_AUTH_DATABASE:-admin}
MONGO_SECURITY_ROOT_USERNAME=${MONGO_ROOT_USERNAME:-}
MONGO_SECURITY_ROOT_PASSWORD=${MONGO_ROOT_PASSWORD:-}
MONGO_SECURITY_AUTHORIZATION=${MONGO_SECURITY_AUTHORIZATION:-0}

# Storage
MONGO_DIRECTORY_PER_DB=${MONGO_DIRECTORY_PER_DB:-0}
