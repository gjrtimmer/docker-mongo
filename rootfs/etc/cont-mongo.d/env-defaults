#!/usr/bin/with-contenv bash
# shellcheck shell=bash disable=SC2034

# Global
TZ=${TZ:-UTC}

# Cron
CRON_DATA_DIR=${CRON_DATA_DIR:-/config/cron}
CRON_LOG_DIR=${CRON_LOG_DIR:-${CRON_DATA_DIR}/logs}

# Mongo
MONGO_HOME=${MONGO_HOME:-${HOME}/mongo}
MONGO_DB_DIR=${MONGO_DB_DIR:-${MONGO_HOME}/db}
MONGO_CFGDB_DIR=${MONGO_CFGDB_DIR:-${MONGO_HOME}/configdb}
MONGO_ARCHIVE_DIR=${MONGO_ARCHIVE_DIR:-${MONGO_HOME}/archive}
MONGO_CONFIG=${MONGO_CONFIG:-${MONGO_HOME}/mongod.conf}
MONGO_LOG_DIR=${MONGO_LOG_DIR:-${MONGO_HOME}/logs}
MONGO_LOG_FILE=${MONGO_LOG_FILE:-${MONGO_LOG_DIR}/mongod.log}

# Mongo Server Type
#
# Options:
#  SERVER_SINGLE
#  SERVER_REPLICA
#  SERVER_CONFIG
#  SERVER_SHARD
MONGO_SERVER_TYPE=${MONGO_SERVER_TYPE:-SERVER_SINGLE}

# Authentication
MONGO_AUTH_DATABASE=${MONGO_AUTH_DATABASE:-admin}
MONGO_ROOT_USERNAME=${MONGO_ROOT_USERNAME:-}
MONGO_ROOT_PASSWORD=${MONGO_ROOT_PASSWORD:-}
MONGO_DIRECTORY_PER_DB=${MONGO_DIRECTORY_PER_DB:-0}
MONGO_SOCKET_DIR=${MONGO_SOCKET_DIR:-/var/run/mongod}
